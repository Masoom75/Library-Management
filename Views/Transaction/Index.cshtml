@model List<LibraryManagement.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-exchange-alt"></i> Transactions Management</h2>
    <a asp-controller="Transaction" asp-action="IssueBook" class="btn btn-warning">
        <i class="fas fa-hand-holding"></i> Issue Book
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-warning">
                        <tr>
                            <th>Book Title</th>
                            <th>Member Name</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Return Date</th>
                            <th>Status</th>
                            <th>Fine</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model)
                        {
                            <tr>
                                <td>@transaction.BookTitle</td>
                                <td>@transaction.MemberName</td>
                                <td>@transaction.IssueDate.ToString("dd MMM yyyy")</td>
                                <td>@transaction.DueDate.ToString("dd MMM yyyy")</td>
                                <td>@(transaction.ReturnDate?.ToString("dd MMM yyyy") ?? "-")</td>
                                <td>
                                    @if (transaction.Status == "Returned")
                                    {
                                        <span class="badge bg-success">@transaction.Status</span>
                                    }
                                    else if (transaction.Status == "Overdue")
                                    {
                                        <span class="badge bg-danger">@transaction.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">@transaction.Status</span>
                                    }
                                </td>
                                <td>
                                    @if (transaction.Fine > 0)
                                    {
                                        <span class="text-danger"><strong>$@transaction.Fine</strong></span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Transaction" asp-action="Details" asp-route-id="@transaction.Id" 
                                           class="btn btn-sm btn-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (transaction.Status != "Returned")
                                        {
                                            <a asp-controller="Transaction" asp-action="ReturnBook" asp-route-id="@transaction.Id" 
                                               class="btn btn-sm btn-success" 
                                               onclick="return confirm('Mark this book as returned?')" 
                                               title="Return Book">
                                                <i class="fas fa-undo"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No transactions found. 
        <a asp-controller="Transaction" asp-action="IssueBook">Issue your first book</a>
    </div>
}