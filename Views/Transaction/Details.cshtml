@model LibraryManagement.Models.Transaction
@{
    ViewData["Title"] = "Transaction Details";
    var book = ViewBag.Book as LibraryManagement.Models.Book;
    var member = ViewBag.Member as LibraryManagement.Models.Member;
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="fas fa-receipt"></i> Transaction Details</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary"><i class="fas fa-book"></i> Book Information</h5>
                        <table class="table table-borderless table-sm">
                            <tr>
                                <th width="40%">Title:</th>
                                <td>@Model.BookTitle</td>
                            </tr>
                            @if (book != null)
                            {
                                <tr>
                                    <th>Author:</th>
                                    <td>@book.Author</td>
                                </tr>
                                <tr>
                                    <th>ISBN:</th>
                                    <td>@book.ISBN</td>
                                </tr>
                                <tr>
                                    <th>Category:</th>
                                    <td><span class="badge bg-info">@book.Category</span></td>
                                </tr>
                            }
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-success"><i class="fas fa-user"></i> Member Information</h5>
                        <table class="table table-borderless table-sm">
                            <tr>
                                <th width="40%">Name:</th>
                                <td>@Model.MemberName</td>
                            </tr>
                            @if (member != null)
                            {
                                <tr>
                                    <th>Membership No:</th>
                                    <td>@member.MembershipNumber</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>@member.Email</td>
                                </tr>
                                <tr>
                                    <th>Phone:</th>
                                    <td>@member.Phone</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>

                <hr>

                <h5 class="text-warning"><i class="fas fa-calendar-alt"></i> Transaction Information</h5>
                <table class="table table-borderless">
                    <tr>
                        <th width="30%">Issue Date:</th>
                        <td>@Model.IssueDate.ToString("dd MMMM yyyy, hh:mm tt")</td>
                    </tr>
                    <tr>
                        <th>Due Date:</th>
                        <td>@Model.DueDate.ToString("dd MMMM yyyy")</td>
                    </tr>
                    <tr>
                        <th>Return Date:</th>
                        <td>
                            @if (Model.ReturnDate.HasValue)
                            {
                                @Model.ReturnDate.Value.ToString("dd MMMM yyyy, hh:mm tt")
                            }
                            else
                            {
                                <span class="text-muted">Not returned yet</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.Status == "Returned")
                            {
                                <span class="badge bg-success fs-6">@Model.Status</span>
                            }
                            else if (Model.Status == "Overdue")
                            {
                                <span class="badge bg-danger fs-6">@Model.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark fs-6">@Model.Status</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Fine Amount:</th>
                        <td>
                            @if (Model.Fine > 0)
                            {
                                <span class="text-danger fs-5"><strong>$@Model.Fine</strong></span>
                            }
                            else
                            {
                                <span class="text-success">$0.00</span>
                            }
                        </td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <tr>
                            <th>Notes:</th>
                            <td>@Model.Notes</td>
                        </tr>
                    }
                </table>

                <div class="mt-4">
                    @if (Model.Status != "Returned")
                    {
                        <a asp-controller="Transaction" asp-action="ReturnBook" asp-route-id="@Model.Id" 
                           class="btn btn-success" 
                           onclick="return confirm('Mark this book as returned?')">
                            <i class="fas fa-undo"></i> Return Book
                        </a>
                    }
                    <a asp-controller="Transaction" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>