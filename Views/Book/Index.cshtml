@model List<LibraryManagement.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-book"></i> Books Management</h2>
    <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Book
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>ISBN</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Available</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@(book.ImagePath ?? "/images/default-book.png")" 
                                         alt="@book.Title" 
                                         style="width: 50px; height: 70px; object-fit: cover;">
                                </td>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td>@book.ISBN</td>
                                <td><span class="badge bg-info">@book.Category</span></td>
                                <td>@book.Quantity</td>
                                <td>
                                    @if (book.AvailableQuantity > 0)
                                    {
                                        <span class="badge bg-success">@book.AvailableQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" 
                                           class="btn btn-sm btn-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" 
                                           class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" 
                                           class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Are you sure you want to delete this book?')" 
                                           title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No books found. 
        <a asp-controller="Book" asp-action="Create">Add your first book</a>
    </div>
}