@model List<LibraryManagement.Models.Member>
@{
    ViewData["Title"] = "Members";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Members Management</h2>
    <a asp-controller="Member" asp-action="Create" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Add New Member
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>Membership No.</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Member Type</th>
                            <th>Status</th>
                            <th>Join Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            <tr>
                                <td><strong>@member.MembershipNumber</strong></td>
                                <td>@member.Name</td>
                                <td>@member.Email</td>
                                <td>@member.Phone</td>
                                <td><span class="badge bg-secondary">@member.MemberType</span></td>
                                <td>
                                    @if (member.Status == "Active")
                                    {
                                        <span class="badge bg-success">@member.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@member.Status</span>
                                    }
                                </td>
                                <td>@member.JoinDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Member" asp-action="Details" asp-route-id="@member.Id" 
                                           class="btn btn-sm btn-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Member" asp-action="Edit" asp-route-id="@member.Id" 
                                           class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="Member" asp-action="Delete" asp-route-id="@member.Id" 
                                           class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Are you sure you want to delete this member?')" 
                                           title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No members found. 
        <a asp-controller="Member" asp-action="Create">Add your first member</a>
    </div>
}