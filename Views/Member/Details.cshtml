@model LibraryManagement.Models.Member
@{
    ViewData["Title"] = "Member Details";
    var transactions = ViewBag.Transactions as List<LibraryManagement.Models.Transaction>;
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="fas fa-user"></i> Member Details</h4>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Membership Number:</th>
                        <td><strong>@Model.MembershipNumber</strong></td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Phone:</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th>Address:</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Member Type:</th>
                        <td><span class="badge bg-secondary">@Model.MemberType</span></td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success">@Model.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@Model.Status</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Join Date:</th>
                        <td>@Model.JoinDate.ToString("dd MMM yyyy")</td>
                    </tr>
                </table>

                <div class="mt-3">
                    <a asp-controller="Member" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-controller="Member" asp-action="Delete" asp-route-id="@Model.Id" 
                       class="btn btn-danger" 
                       onclick="return confirm('Are you sure?')">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                    <a asp-controller="Member" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        @if (transactions != null && transactions.Any())
        {
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Transaction History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Book Title</th>
                                    <th>Issue Date</th>
                                    <th>Due Date</th>
                                    <th>Return Date</th>
                                    <th>Status</th>
                                    <th>Fine</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var trans in transactions)
                                {
                                    <tr>
                                        <td>@trans.BookTitle</td>
                                        <td>@trans.IssueDate.ToString("dd MMM yyyy")</td>
                                        <td>@trans.DueDate.ToString("dd MMM yyyy")</td>
                                        <td>@(trans.ReturnDate?.ToString("dd MMM yyyy") ?? "-")</td>
                                        <td>
                                            @if (trans.Status == "Returned")
                                            {
                                                <span class="badge bg-success">@trans.Status</span>
                                            }
                                            else if (trans.Status == "Overdue")
                                            {
                                                <span class="badge bg-danger">@trans.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">@trans.Status</span>
                                            }
                                        </td>
                                        <td>
                                            @if (trans.Fine > 0)
                                            {
                                                <span class="text-danger"><strong>$@trans.Fine</strong></span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>